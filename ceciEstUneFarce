
public class TestVehicle {
	
	public static void main(String[] args) {
		
		Vehicle v = new Vehicle();
		System.out.print(v.affiche());
		System.out.println(" avec " + v.getNbWheels() + " roues");
		
		Vehicle v1 = new Vehicle("Mazda",4);
		System.out.print(v1.affiche());
		System.out.println(" avec " + v1.getNbWheels() + " roues");

		
		Bicycle b = new Bicycle("Cilo");
		System.out.print(b.affiche());
		System.out.println(" avec " + b.getNbWheels() + " roues");

		Car c = new Car("vw");
		System.out.print(c.affiche());
		System.out.println(" avec " + c.getNbWheels() + " roues");

		
		Cabriolet ca = new Cabriolet("maserati");
		System.out.print(ca.affiche());
		System.out.println(" avec " + ca.getNbWheels() + " roues");

	}
	
	
}
